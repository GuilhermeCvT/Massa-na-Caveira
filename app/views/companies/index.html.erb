<h1>Praças</h1>

<div class="btn-group btn-group-sm">
    <%= link_to new_company_path, class:"btn btn-success btn-sm" do %>
        <i class="fa fa-plus"></i> Cadastrar
    <% end %>
</div>

<hr>

<table id="datatable" class="table table-striped table-bordered" style="width:100%">
  <thead>
    <tr>
        <th>#</th>
        <th>Praça</th>
        <th>Ativo</th>
        <th>Criado em</th>
    </tr>
  </thead>

  <tbody>
      <% @companies.each do |company| %>
          <tr>
              <td> <%= company.id %> </td>
              <td> <%= company.description %> </td>
              <% if company.enable == true %>
                  <td> <input type="checkbox" checked disabled> </td>
              <% else %>
                  <td> <input type="checkbox" disabled> </td>
              <% end %>
              <td> <%= l company.created_at, format: :normal %> </td>

              <td> 
                  <%= button_to edit_company_path(company), method: :get, class:"btn-info btn-xs btn-round" do %>
                      <i class="fa fa-pencil"></i>
                  <% end %>
                  <%= button_to company_path(company), method: :delete, class:"btn-danger btn-xs btn-round", :onclick => "return confirm ('Deseja realmente excluir o usuário?')" do %>
                      <i class="fa fa-trash-o"></i>
                  <% end %>
              </td>
          </tr>
      <% end %>
  </tbody>
</table>

<div class="d-flex justify-content-center">
    <%= paginate @companies %>
</div>