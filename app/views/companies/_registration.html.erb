<div class="x_content">
    <% if @company.errors.any? %>
        <div class="alert alert-danger alert-dismissible" role="alert">
            <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">×</span></button>
            <ul>
                <% @company.errors.full_messages.each do |message| %>
                    <li> <%= message %> </li>
                <% end %>
            </ul>
        </div>
    <% end %>

    <%= form_with(model: [@company], local: true) do |form| %>
        <div class="field item form-group">
            <label class="col-form-label col-md-3 col-sm-3 label-align">Praça<span class="required">*</span></label>
            <div class="col-md-6 col-sm-6">
                <%= form.text_field :description, class:"form-control", required:"required", value: @company.description %>
            </div>
        </div>
        
        <div class="field item form-group">
            <label class="col-form-label col-md-3 col-sm-3  label-align">Criado em</label>
            <div class="col-md-6 col-sm-6">
                <%= form.text_field :create, class:"form-control", required:"required", value: @company.created_at, disabled: "disabled" %>
            </div>
        </div>

        <div class="field item form-group">
            <label class="col-form-label col-md-3 col-sm-3  label-align">Ativo</label>
            <%= form.check_box :enable, {class: ""}, "true", "false" %>
        </div>

        <div class="form-group">
            <div class="col-md-6 offset-md-3">
                <button type='submit' class="btn btn-primary">Salvar</button>
                <a href="/companies" type='reset' class="btn btn-success">Voltar</a>
            </div>
        </div>
    <% end %>
</div>