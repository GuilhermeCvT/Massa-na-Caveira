<h1>Usuários</h1>

<% if notice.present? %>

    <div class="alert alert-success alert-dismissible " role="alert">
        <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">×</span></button>
        <%= notice %>
    </div>

<% end %>

<div class="btn-group btn-group-sm">
    <%= link_to new_admins_user_path, class:"btn btn-success btn-sm" do %>
        <i class="fa fa-plus"></i> Cadastrar
    <% end %>
</div>

<hr>

<table id="datatable" class="table table-striped table-bordered" style="width:100%">
    <thead>
    <tr>
        <th>#</th>
        <th>Usuário</th>
        <th>E-mail</th>
        <th>Permissão acesso</th>
        <th>Ativo</th>
    </tr>
    </thead>

    <tbody>
    <% @users.each do |user| %>
        <tr>
            <td> <%= user.id %> </td>
            <td> <%= user.username %> </td>
            <td> <%= user.email %> </td>
            <td> <%= user.entrance.description %> </td>
            <% if user.enable == true %>
                <td> <input type="checkbox" checked disabled> </td>
            <% else %>
                <td> <input type="checkbox" disabled> </td>
            <% end %>
            <td> 
                <%= link_to edit_admins_user_path(user), class:"btn-info btn-sm" do %>
                    <i class="fa fa-pencil"></i>
                <% end %>
                <a href="#" ></a>
                <%= link_to admins_user_path(user), method: :delete, class:"btn-danger btn-sm" do %>
                    <i class="fa fa-trash-o"></i>
                <% end %>
            </td>
        </tr>
    <% end %>
    </tbody>
</table>