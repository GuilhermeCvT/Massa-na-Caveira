<h1>Usuários</h1>

<div class="btn-group btn-group-sm">
    <%= link_to new_admins_user_path, class:"btn btn-success btn-sm" do %>
        <i class="fa fa-plus"></i> Cadastrar
    <% end %>
</div>

<hr>

<table id="datatable" class="table table-striped table-bordered" style="width:100%">
    <thead>
        <tr>
            <th>#</th>
            <th>Usuário</th>
            <th>E-mail</th>
            <th>Permissão acesso</th>
            <th>Ativo</th>
        </tr>
    </thead>

    <tbody>
        <% @users.each do |user| %>
            <tr>
                <td> <%= user.id %> </td>
                <td> <%= user.username %> </td>
                <td> <%= user.email %> </td>
                <td> <%= user.entrance.description %> </td>

                <% if user.enable == true %>
                    <td> <input type="checkbox" checked disabled> </td>
                <% else %>
                    <td> <input type="checkbox" disabled> </td>
                <% end %>
                <td> 
                    <%= button_to edit_admins_user_path(user), method: :get, class:"btn-info btn-xs btn-round" do %>
                        <i class="fa fa-pencil"></i>
                    <% end %>
                    <%= button_to admins_user_path(user), method: :delete, class:"btn-danger btn-xs btn-round", :onclick => "return confirm ('Deseja realmente excluir o usuário?')" do %>
                        <i class="fa fa-trash-o"></i>
                    <% end %>
                </td>
            </tr>
        <% end %>
    </tbody>
</table>

<div class="d-flex justify-content-center">
    <%= paginate @users %>
</div>